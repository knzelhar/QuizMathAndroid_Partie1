<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin">

        <!-- NOUVEAU : Panneau de score -->
        <LinearLayout
            android:id="@+id/scorePanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/score_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score : 0 / 0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txtPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taux de réussite : 0%"
                android:textSize="16sp"
                android:textColor="@color/textDark"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Premier nombre -->
        <TextView
            android:id="@+id/txtNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/text_large"
            android:textColor="@color/textDark"
            android:layout_below="@id/scorePanel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin"/>

        <!-- Symbole de l'opération -->
        <TextView
            android:id="@+id/txtOperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="@dimen/text_large"
            android:textColor="@color/accent"
            android:layout_below="@id/txtNum1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <!-- Deuxième nombre -->
        <TextView
            android:id="@+id/txtNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/text_large"
            android:textColor="@color/textDark"
            android:layout_below="@id/txtOperation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <!-- Ligne de séparation -->
        <View
            android:id="@+id/line"
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="@color/textDark"
            android:layout_below="@id/txtNum2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>

        <!-- Boutons d'opérations -->
        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_plus"
                android:layout_marginRight="@dimen/button_margin"/>

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_minus"
                android:layout_marginRight="@dimen/button_margin"/>

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_multiply"/>
        </LinearLayout>

        <!-- Champ de réponse de l'utilisateur -->
        <EditText
            android:id="@+id/editAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_answer"
            android:inputType="numberSigned"
            android:textSize="@dimen/text_medium"
            android:layout_below="@id/layoutButtons"
            android:layout_marginTop="24dp"
            android:gravity="center"/>

        <!-- Bouton Vérifier -->
        <Button
            android:id="@+id/btnCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_check"
            android:layout_below="@id/editAnswer"
            android:layout_marginTop="@dimen/margin"/>

        <!-- Résultat -->
        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_medium"
            android:textColor="@color/textDark"
            android:layout_below="@id/btnCheck"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <!-- Bouton Générer -->
        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_generate"
            android:layout_below="@id/txtResult"
            android:layout_marginTop="24dp"/>

        <!-- NOUVEAU : Bouton réinitialiser score -->
        <Button
            android:id="@+id/btnResetScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_reset_score"
            android:backgroundTint="@color/incorrect"
            android:layout_below="@id/btnGenerate"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>
</ScrollView>